<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gigabytegirls.communityalliance.ASignUp">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="34dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am a..."
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/Welcome"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/Welcome" />

    <CheckBox
        android:id="@+id/individual"
        android:onClick="onIndividual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="individual"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="34dp"
        android:layout_marginTop="109dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="34dp" />

    <CheckBox
        android:id="@+id/buisness"
        android:onClick="onBuisness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buisness"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="34dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/individual"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="34dp" />

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="26dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/buisness"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/buisness"
        android:layout_marginLeft="26dp"
        android:onClick="onNext"/>

</android.support.constraint.ConstraintLayout>
